}

define empty<T> (List<T> -> Bool):
  _::kitten::empty

define head<T> (List<T> -> Optional<T>):
  _::kitten::head

define tail<T> (List<T> -> Optional<List<T>>):
  _::kitten::tail

define prepend<T> (T, List<T> -> List<T>):
  _::kitten::prepend

define head_tail<T> (List<T> -> Optional<Pair<T, List<T>>>):
  -> xs;
  match (xs head):
    case none:
      none
    case some -> y:
      match (xs tail):
        case none:
          none
        case some -> ys:
          y ys pair some

define map<A, B, +P> (List<A>, (A -> B +P) -> List<B> +P):
  -> xs, f;
  match (xs head_tail):
    case none:
      []
    case some:
      unpair -> y, ys;
      y f call -> z;
      ys f map -> zs;
      z zs prepend

